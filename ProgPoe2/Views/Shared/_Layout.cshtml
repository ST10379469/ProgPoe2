<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Contract Monthly Claim System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="https://c8.alamy.com/comp/WPCFDN/vector-presentation-meeting-conference-seminar-line-icon-WPCFDN.jpg"
                         alt="MCCS Logo" width="30" height="30" />
                    <span class="ml-2">MCCS</span>
                </a>

                @if (Context.Session.GetString("UserRole") != null)
                {
                    <span class="navbar-text text-light mr-3">
                        Welcome, @Context.Session.GetString("UserName")
                    </span>
                }

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (Context.Session.GetString("UserRole") == null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-action="Index"><i class="fas fa-home"></i> Login</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-action="Logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
                            </li>

                            @if (Context.Session.GetString("UserRole") == "HR")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-action="HRDashboard"><i class="fas fa-users-cog"></i> HR Dashboard</a>
                                </li>
                            }

                            @if (Context.Session.GetString("UserRole") == "Lecturer")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-action="SubmitClaim"><i class="fas fa-file-invoice-dollar"></i> Submit Claim</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-action="ViewClaims"><i class="fas fa-list"></i> My Claims</a>
                                </li>
                            }

                            @if (Context.Session.GetString("UserRole") == "Coordinator" || Context.Session.GetString("UserRole") == "Manager")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-action="ApprovalDashboard"><i class="fas fa-check-circle"></i> Approval Dashboard</a>
                                </li>
                            }

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-action="GenerateHRReport"><i class="fas fa-chart-bar"></i> HR Report</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Monthly Contract Claim System -
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
