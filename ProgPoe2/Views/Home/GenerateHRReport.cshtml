@model ProgPoe2.Models.HRReport

<h2>HR Report</h2>

<p>Report Date: @Model.ReportDate.ToShortDateString()</p>

<table class="table">
    <thead>
        <tr>
            <th>Total Claims</th>
            <th>Approved Claims</th>
            <th>Pending Claims</th>
            <th>Rejected Claims</th>
            <th>Total Amount (R)</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.TotalClaims</td>
            <td>@Model.ApprovedClaimsCount</td>
            <td>@Model.PendingClaimsCount</td>
            <td>@Model.RejectedClaimsCount</td>
            <td>@Model.TotalAmount</td>
        </tr>
    </tbody>
</table>

<h3>Claims Details</h3>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Lecturer</th>
            <th>Status</th>
            <th>Hours Worked</th>
            <th>Hourly Rate</th>
            <th>Total Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model.Claims)
        {
            <tr>
                <td>@claim.Id</td>
                <td>@claim.LecturerName</td>
                <td>@claim.Status</td>
                <td>@claim.HoursWorked</td>
                <td>@claim.HourlyRate</td>
                <td>@(claim.HoursWorked * claim.HourlyRate)</td>
            </tr>
        }
    </tbody>
</table>
