@model Claim

<h2>Edit Claim</h2>

<form asp-action="EditClaim" method="post" enctype="multipart/form-data" class="gray-scale-form">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="LecturerName" class="form-label">Lecturer Name</label>
        <input asp-for="LecturerName" class="form-control gray-input" required />
    </div>

    <div class="form-group">
        <label asp-for="HoursWorked" class="form-label">Hours Worked</label>
        <input asp-for="HoursWorked" type="number" step="0.5" class="form-control gray-input" required />
    </div>

    <div class="form-group">
        <label asp-for="HourlyRate" class="form-label">Hourly Rate (R)</label>
        <input asp-for="HourlyRate" type="number" step="0.01" class="form-control gray-input" required />
    </div>
    //Troelsen and Japikse (2021)
    <div class="form-group">
        <label asp-for="Notes" class="form-label">Additional Notes</label>
        <textarea asp-for="Notes" class="form-control gray-input"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Status" class="form-label">Status</label>
        <select asp-for="Status" class="form-control gray-input">
            <option value="Pending">Pending</option>
            <option value="Approved">Approved</option>
            <option value="Rejected">Rejected</option>
        </select>
    </div>

    <div class="form-group">
        <label for="file" class="form-label">Supporting Document</label>
        <input type="file" id="file" name="file" class="form-control-file" />
        @if (!string.IsNullOrEmpty(Model.SupportingDocumentName))
        {
            <p>Current file: @Model.SupportingDocumentName</p>
        }
    </div>

    <button type="submit" class="btn btn-primary gray-button">Save Changes</button>
</form>
