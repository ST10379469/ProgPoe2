@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0"><i class="fas fa-university"></i> MCCS</h3>
                    <p class="mb-0">Monthly Contract Claim System</p>
                </div>
                <div class="card-body">
                    <h4 class="text-center mb-4">Login to Your Account</h4>

                    <form method="post" action="@Url.Action("Login", "Home")">
                        <div class="form-group">
                            <label for="email" class="form-label">Email Address</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                </div>
                                <input type="email" id="email" name="email" class="form-control"
                                       placeholder="Enter your email" required />
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="password" class="form-label">Password</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                </div>
                                <input type="password" id="password" name="password" class="form-control"
                                       placeholder="Enter your password" required />
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary btn-block btn-lg">
                            <i class="fas fa-sign-in-alt"></i> Login
                        </button>
                    </form>

                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger mt-3">
                            <i class="fas fa-exclamation-triangle"></i> @ViewBag.ErrorMessage
                        </div>
                    }

                    <div class="mt-4 text-center">
                        <small class="text-muted">
                            <i class="fas fa-info-circle"></i>
                            Don't have an account? Contact HR to create your profile.
                        </small>
                    </div>
                </div>
            </div>

            <div class="text-center mt-4">
                <div class="row">
                    <div class="col-md-12">
                        <h5>Demo Accounts</h5>
                        <div class="d-flex justify-content-center flex-wrap">
                            <span class="badge badge-info m-1">HR: hr@university.com / 123</span>
                            <span class="badge badge-info m-1">Lecturer: john@university.com / 123</span>
                            <span class="badge badge-info m-1">Coordinator: sarah@university.com / 123</span>
                            <span class="badge badge-info m-1">Manager: mike@university.com / 123</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
